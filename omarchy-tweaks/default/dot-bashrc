# All the default Omarchy aliases and functions
# (don't mess with these directly, just overwrite them here!)
source ~/.local/share/omarchy/default/bash/rc

# >>> juliaup initialize >>>

# !! Contents within this block are managed by juliaup !!

case ":$PATH:" in
*:/home/kristian/.juliaup/bin:*) ;;

*)
    export PATH=/home/kristian/.juliaup/bin${PATH:+:${PATH}}
    ;;
esac

# <<< juliaup initialize <<<

# Aliases
alias j='julia'
alias jp='julia --project=.'
alias lg='lazygit'
alias ca='cursor-agent'
alias dac='$HOME/.dotfiles/omarchy-tweaks/bin/dotfiles-apply-config.sh'
alias dsp='$HOME/.dotfiles/omarchy-tweaks/bin/dotfiles-setup-packages.sh'
alias dfb='$HOME/.dotfiles/omarchy-tweaks/bin/dotfiles-firefly-backup.sh'
alias dfr='$HOME/.dotfiles/omarchy-tweaks/bin/dotfiles-firefly-restore.sh'
alias dss='$HOME/.dotfiles/omarchy-tweaks/bin/dotfiles-setup-ssh.sh'
alias drs='$HOME/.dotfiles/omarchy-tweaks/bin/dotfiles-rsync-ssh.sh'
alias dst='$HOME/.dotfiles/omarchy-tweaks/bin/dotfiles-ssh-tmux.sh'


alias tb='tensorboard --logdir'

#Operations
alias glall='find . -type d -name ".git" -execdir git pull \;'

#variables
export JULIA_NUM_THREADS=auto

# Add dotfiles scripts to PATH
export PATH="$HOME/.dotfiles/omarchy-tweaks/bin:$PATH"

# Testing if this is necessary
# SSH agent
# if [[ -z "$SSH_AUTH_SOCK" ]]; then
#     # Start ssh-agent if not already running
#     eval "$(ssh-agent -s)" >/dev/null
# fi


# starship prompt
eval "$(starship init bash)"

# zoxide - must be initialized last
if command -v zoxide &>/dev/null; then
    eval "$(zoxide init bash)"
fi
